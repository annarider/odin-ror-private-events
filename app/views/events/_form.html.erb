  </div>

  <div>
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>

  <div>
    <%= f.label :private %>
    <%= f.check_box :private %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>
